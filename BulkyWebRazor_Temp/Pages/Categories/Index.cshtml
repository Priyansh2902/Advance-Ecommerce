@page
@model BulkyWebRazor_Temp.Pages.Categories.IndexModel

@*<input asp-for="Id" hidden/>*@
<div class="container">
    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h2 class="text-primary">
                Category_list
            </h2>
        </div>
        <div class="col-6 text-end">
            <a asp-page="/categories/create" class="btn btn-primary">
                <i class="bi bi-file-earmark-plus"></i> Create-New-Category
            </a>
        </div>

    </div>
</div>

<br />

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>
                Category_Name
            </th>
            <th>
                Display_Order
            </th>
            <th>

            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var obj in Model.CategoryList.OrderBy(u => u.DisplayOrder))
        {
            <tr>
                <td>
                    @obj.Name
                </td>
                <td>
                    @obj.DisplayOrder
                </td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-page="/categories/edit" asp-route-id="@obj.Id" class="btn btn-primary mx-2">
                            <i class="bi bi-pencil-square"></i>
                            Edit
                        </a>
                        <a asp-page="/categories/delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2">
                            <i class="bi bi-trash"></i>
                            Delete
                        </a>
                    </div>
                </td>
            </tr>
        }
    </tbody>

</table>


